<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cloverimg"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="340dp"
        />

    <LinearLayout
        android:id="@+id/splashtext"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textColor="#fff"
            android:textSize="34sp"
            android:textStyle="bold"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gym App"
            android:textColor="#fff"
            android:textSize="26sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hometext"
        android:gravity="left"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textColor="#fff"
            android:textSize="31sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More with Gym App"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="italic"
            />
    </LinearLayout>

    <!-- START MENU -->
    <LinearLayout
        android:id="@+id/menu"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_marginTop="340dp"
        >
        <!-- FIRST LINE -->
        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/sport1"/>

                <Button
                    android:id="@+id/exerciceBtn"
                    android:paddingLeft="0sp"
                    android:paddingRight="0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Exercice"

                    android:textSize="22sp"
                    android:textColor="#0e1843"
                    android:textAllCaps="false"
                    android:backgroundTint="#0000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/bookcon"/>
                <Button
                    android:id="@+id/planBtn"
                    android:paddingLeft="0sp"
                    android:paddingRight="0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Gym Plan"
                    android:textSize="22sp"
                    android:textColor="#0e1843"
                    android:textAllCaps="false"
                    android:backgroundTint="#0000"/>
            </LinearLayout>
        </LinearLayout>
        <!-- END FIRST LINE -->

        <!-- FIRST LINE -->
        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/graph"/>
                <Button
                    android:id="@+id/progressBtn"
                    android:paddingLeft="0sp"
                    android:paddingRight="0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Progress"
                    android:textSize="22sp"
                    android:textColor="#0e1843"
                    android:textAllCaps="false"
                    android:backgroundTint="#0000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/setting"/>
                <Button
                    android:id="@+id/settingsBtn"
                    android:paddingLeft="0sp"
                    android:paddingRight="0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:textSize="22sp"
                    android:textColor="#0e1843"
                    android:textAllCaps="false"
                    android:backgroundTint="#0000"
                    android:text="Settings"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- END FIRST LINE -->

    </LinearLayout>
    <!-- END MENU -->

    <ImageView
        android:id="@+id/bgapp"
        android:layout_width="580dp"
        android:layout_height="780dp"
        android:src="@drawable/bgapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.923"
        />




</androidx.constraintlayout.widget.ConstraintLayout>